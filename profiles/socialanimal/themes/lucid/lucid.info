name = Lucid
description = Basic theme utilizing HTML5 and responsive layout.
core = 7.x
engine = phptemplate

; Stylesheets
stylesheets[screen][] = css/lucid/lucid-reset.css
stylesheets[screen][] = css/lucid/style.css
stylesheets[screen][] = css/lucid/grid.css
stylesheets[screen][] = css/lucid/grid-adaptive.css
stylesheets[screen][] = css/lucid/layout.css

; Stylesheets for exclusion
stylesheets[all][] = modules/filter/filter.css
stylesheets[all][] = modules/system/system.menus.css

; Panels settings
api[panels][styles][version] = 3
plugins[panels][layouts] = layouts

; Theme settings
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu

settings[breadcrumb_display]   = "yes"
settings[breadcrumb_separator] = ' ‚Ä∫ '
settings[breadcrumb_home]      = 1
settings[breadcrumb_trailing]  = 0
settings[breadcrumb_title]     = 0
